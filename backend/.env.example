# 서버 설정
PORT=5000
HOST=0.0.0.0
NODE_ENV=development

# 프론트엔드 설정
FRONTEND_URLS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# 세션 설정
SESSION_SECRET=your-session-secret-key

# JWT 설정
JWT_SECRET=your-jwt-secret-key

# Google OAuth2 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# SOLAPI OAuth2 설정
SOLAPI_CLIENT_ID=your-solapi-client-id
SOLAPI_CLIENT_SECRET=your-solapi-client-secret
SOLAPI_REDIRECT_URI=http://localhost:5000/api/solapi/auth/callback

# QR 코드 보안키
QR_SECRET_KEY=your-qr-secret-key

# 암호화 설정
ENCRYPTION_KEY=32_character_secret_key_here!!

# CORS 설정 (프로덕션)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting 설정
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60
AUTH_RATE_LIMIT_MAX_REQUESTS=5
AUTH_RATE_LIMIT_BLOCK_DURATION_MS=3600000

# 보안 헤더 설정
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# 로그 설정
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 보안 감사 로그
AUDIT_LOG_ENABLED=true
AUDIT_LOG_FILE=logs/security-audit.log