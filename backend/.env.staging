# 스테이징 환경 변수
NODE_ENV=staging

# 네트워크 설정
SERVER_IP=staging.your-domain.com
SERVER_PORT=5001
FRONTEND_PORT=80

# 데이터베이스 설정 (향후 MongoDB 사용 시)
# MONGODB_URI=mongodb://localhost:27017/delivery-mgmt-staging
# DB_NAME=delivery_mgmt_staging

# OAuth 설정 (스테이징용 테스트 키)
GOOGLE_CLIENT_ID=your_staging_google_client_id
GOOGLE_CLIENT_SECRET=your_staging_google_client_secret
SOLAPI_CLIENT_ID=your_staging_solapi_client_id
SOLAPI_CLIENT_SECRET=your_staging_solapi_client_secret

# 보안
SESSION_SECRET=staging-session-secret-change-in-production
JWT_SECRET=staging-jwt-secret-change-in-production
QR_SECRET_KEY=staging-qr-secret-change-in-production

# 로깅
LOG_LEVEL=debug
LOG_FILE_MAX_SIZE=10485760
LOG_MAX_FILES=7

# 보안 헤더
TRUST_PROXY=true
SECURE_COOKIES=false

# CORS 설정
CORS_ORIGIN=http://staging.your-domain.com

# 성능 설정
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# 헬스체크 설정
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=10000